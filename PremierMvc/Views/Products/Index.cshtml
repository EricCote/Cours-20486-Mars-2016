@model IEnumerable<PremierMvc.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 id="h2">Index</h2>

<div>
    @Html.ActionLink("Create New", "Create")   

    <div id="divCat">@Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })</div>
    <div id="divSubCat">@Html.DropDownList("SubCategoryID", null, htmlAttributes: new { @class = "form-control" })</div>
</div>
<div id="divGrid">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SellStartDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-eye-open" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>
</div>

@section scripts{
    <script>
        $(function () {
            $("#CategoryID").change(function () {
                url = "/products/SubCat/" + $("#CategoryID").val();
                $("#divSubCat").load(url, function () {
                        $("#SubCategoryID").change(function () {
                            urlSubCat = "/products/grid/" + encodeURIComponent($("#SubCategoryID").val()) +
                                   "?category=" + $("#CategoryID").val();
                            $("#divGrid").load(urlSubCat, function () { });
                        });
                       
                });
               
                urlSubCat = "/products/grid/" + "Tous" +
                           "?category=" + $("#CategoryID").val();
                $("#divGrid").load(urlSubCat, function () { });
            });
        });

    </script>
    }


